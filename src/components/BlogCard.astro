---
interface Props {
  title: string;
  excerpt: string;
  date: string;
  author: {
    name: string;
    image: string;
  };
  slug: string;
}

const { title, excerpt, date, author, slug } = Astro.props;
---

<article class="bg-white rounded-lg shadow-md overflow-hidden">
  <a href={`/pearls/${slug}`} class="block hover:opacity-90">
    <div class="p-6">
      <div class="flex items-center mb-4">
        <img src={author.image} alt={author.name} class="w-10 h-10 rounded-full mr-3">
        <div>
          <p class="font-medium text-gray-900">{author.name}</p>
          <p class="text-sm text-gray-500">{date}</p>
        </div>
      </div>
      <h2 class="text-xl font-semibold mb-2 hover:text-primary">{title}</h2>
      <p class="text-gray-600">{excerpt}</p>
    </div>
  </a>
</article>