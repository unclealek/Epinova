---
interface Props {
  title: string;
  description: string;
  href: string;
  image: string;
}
const { title, description, href, image } = Astro.props;
---

{/*<a href={href} class="block group">*/}
  <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-[400px] overflow-hidden">
    {/* Image Section (Top Half) */}
    <div class="h-1/2">
      <img 
        src={image} 
        alt={title} 
        class="w-full h-full object-cover"
      />
    </div>
    
    {/* Content Section (Bottom Half) */}
    <div class="p-6 h-1/2 flex flex-col justify-between">
      <div>
        <h3 class="text-xl font-semibold mb-3 group-hover:text-primary transition-colors">
          {title}
        </h3>
        <p class="text-gray-600 line-clamp-3">
          {description}
        </p>
      </div>
      <div class="text-primary font-medium group-hover:translate-x-2 transition-transform">
        Learn More â†’
      </div>
    </div>
  </div>
{/*</a>*/}