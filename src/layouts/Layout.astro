---
import Navigation from '../components/Navigation.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="SC Business Development - Empowering Business Growth" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/avif" href="/logo2.avif" />
    <title>{title} | SC Business Development</title>
  </head>
  <body class="bg-gray-50">
    <Navigation />
    <main>
      <slot />
    </main>
  </body>
  
</html>